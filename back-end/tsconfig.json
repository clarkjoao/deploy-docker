{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "baseUrl": "./",
    "outDir": "./build",
    "rootDir": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "noImplicitAny": false,
    "strictPropertyInitialization": false
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./src/**/*"]
}
